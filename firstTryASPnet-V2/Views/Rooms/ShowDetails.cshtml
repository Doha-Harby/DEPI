                <dt class="col-sm-3 fw-bold text-secondary">Room Number:</dt>
                <dd class="col-sm-9">@Model.RoomNumber</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Room Type:</dt>
                <dd class="col-sm-9">@Model.RoomType</dd>

