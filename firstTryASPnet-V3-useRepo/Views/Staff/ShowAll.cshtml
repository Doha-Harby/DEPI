@model List<Staff>

@{
    ViewData["Title"] = "Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        
        <div class="card-header bg-light text-dark text-center py-4 rounded-top-4">
            <h1 class="display-6 mb-0">Staff List</h1>
        </div>

        <div class="card-body p-5">
            <table class="table table-bordered table-hover align-middle text-center">
                <thead class="table-light text-secondary">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Position</td>
                            <td>
                                <a href="@Url.Action("ShowDetails", "Staff", new { id = item.Id })" class="btn btn-outline-primary btn-sm px-3">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white rounded-bottom-4 text-center py-3">
            <a href="@Url.Action("AddStaff", "Staff")" class="btn btn-success btn-lg px-4">
                Add New Staff
            </a>
        </div>
    </div>
</div>
