@model firstTryASPnet.Models.Reservation
@{
    ViewData["Title"] = "Add Reservation";
}

<h2>Add New Reservation</h2>

<form asp-action="AddReservation" method="post">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CheckInDate" class="form-label"></label>
        <input asp-for="CheckInDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CheckOutDate" class="form-label"></label>
        <input asp-for="CheckOutDate" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="RoomNumber" class="form-label"></label>
        <input asp-for="RoomNumber" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
